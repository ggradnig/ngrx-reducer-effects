{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngrx-runtime": {
      "projectType": "library",
      "root": "projects/ngrx-runtime",
      "sourceRoot": "projects/ngrx-runtime/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/ngrx-runtime/tsconfig.lib.json",
            "project": "projects/ngrx-runtime/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngrx-runtime/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ngrx-runtime/tsconfig.lib.json",
              "projects/ngrx-runtime/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ngrx-runtime"
}
